<div class="container">
  <%= form_for [@product, @bid] do |f| %>
    <% if @bid.errors.any? %>
      <div id="error_explanation" class="alert alert-danger" role="alert">
        <h2><%= pluralize(@bid.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% @bid.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="page-header">
      <h1>Enter your bid:</h1>
    </div>
    <div class="form-group">
      <%= f.label :amount %><br>
      <%= f.number_field :amount, class: "form-control bid-amount" %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>